<style>
    :root {
        --primary: #4dabf7;
        --primary-light: #e7f5ff;
        --primary-lighter: #f8fbff;
        --nav-bg: #ffffff;
        --nav-border: rgba(77, 171, 247, 0.1);
    }

    .nav-link-custom {
        background: var(--nav-bg);
        border: 1px solid var(--nav-border);
        border-radius: 0.75rem;
        margin-bottom: 0.5rem;
        color: #4a5568;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

        .nav-link-custom::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 3px;
            background: linear-gradient(180deg, var(--primary) 0%, rgba(77, 171, 247, 0.3) 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .nav-link-custom:hover {
            background: linear-gradient(135deg, var(--primary-lighter) 0%, var(--primary-light) 100%);
            border-color: rgba(77, 171, 247, 0.3);
            color: #2c5282;
            transform: translateX(4px);
            box-shadow: 0 4px 12px rgba(77, 171, 247, 0.1);
        }

            .nav-link-custom:hover::before {
                transform: scaleX(1);
            }

        .nav-link-custom.active {
            background: linear-gradient(135deg, var(--primary-light) 0%, rgba(77, 171, 247, 0.2) 100%);
            border-color: rgba(77, 171, 247, 0.4);
            color: var(--primary);
            font-weight: 600;
        }

            .nav-link-custom.active::before {
                transform: scaleX(1);
            }

    .nav-icon {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #718096;
        transition: all 0.3s ease;
    }

    .nav-link-custom:hover .nav-icon,
    .nav-link-custom.active .nav-icon {
        color: var(--primary);
        transform: scale(1.1);
    }

    .nav-text {
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .nav-link-custom:hover .nav-text,
    .nav-link-custom.active .nav-text {
        color: #2c5282;
        font-weight: 600;
    }

    /* Modo oscuro */
    .dark-mode .nav-link-custom {
        background: #1e293b;
        border-color: rgba(77, 171, 247, 0.2);
        color: #cbd5e0;
    }

        .dark-mode .nav-link-custom:hover {
            background: linear-gradient(135deg, #334155 0%, rgba(77, 171, 247, 0.1) 100%);
            color: #e2e8f0;
        }

        .dark-mode .nav-link-custom.active {
            background: linear-gradient(135deg, rgba(77, 171, 247, 0.2) 0%, rgba(77, 171, 247, 0.1) 100%);
            color: var(--primary);
        }

    .dark-mode .nav-icon {
        color: #94a3b8;
    }

    .dark-mode .nav-link-custom:hover .nav-text,
    .dark-mode .nav-link-custom.active .nav-text {
        color: #e2e8f0;
    }

    /* Efecto de onda al hacer clic */
    .nav-link-custom {
        position: relative;
        overflow: hidden;
    }

        .nav-link-custom:active::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(77, 171, 247, 0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            animation: ripple 0.6s ease-out;
        }

    @@keyframes ripple {
        to {
            width: 200px;
            height: 200px;
            opacity: 0;
        }
    }
</style>